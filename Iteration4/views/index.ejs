        <div id="playlist">
          <ol>
            <div id="current">
              <li>
                <button id="toggle-song" onclick="toggle()"></button>
                <a href="#">Song 1</a>
              </li>
              <div class="bar-background">
                  <audio id="song-audio" type="audio/mpeg"></audio>
                  <input type="range" min="0" max="100" value="0" class="progress"></input>
              </div>
            </div>
            <li onmousedown="console.log('working')">Song 2</li>
            <li>Song 3</li>
            <li>Song 4</li>
